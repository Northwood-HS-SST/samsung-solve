<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_frontend.Pages.AthleteSignupPage.AthleteSignupPage">
    <VerticalStackLayout
        Spacing="0"
        Padding="10"
        VerticalOptions="Center">

        <Label
            Text="Athlete"
            FontSize="64"
            FontFamily = "KohSantepheapRegular"
            TextColor="#4b8e8b"
            HorizontalOptions="Center"/>
        
        <Label
            Text="Sign Up"
            FontSize="48"
            FontFamily = "KohSantepheapRegular"
            TextColor="#4b8e8b"
            HorizontalOptions="Center"
            Margin="0,0,0,20" />
        
        <Button
            Text = "Are you under 13? Click here!"
            FontSize="18"
            FontFamily = "KohSantepheapRegular"
            TextColor="White"
            BackgroundColor="#a4d5c4"
            HorizontalOptions="Center"
            Clicked="Under13Button_Clicked"
            WidthRequest="500"
            HeightRequest="45"
            CornerRadius="0"/>
        
        
        <AbsoluteLayout
            Margin="0,10,0,10"
            HeightRequest="75">

            <Label
                Text="First Name"
                FontFamily="KohSantepheapRegular"
                FontSize="20"
                TextColor="#4b8e8b"
                VerticalOptions="Center"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, AutoSize, AutoSize"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                TranslationX="-400"/>

            <Entry
                x:Name="FirstNameEntry"
                Placeholder=""
                TextColor="White"
                BackgroundColor="#4b8e8b"
                VerticalOptions="Center"
                WidthRequest="625"
                HeightRequest="55"
                TextChanged="FirstNameEntry_OnTextChanged"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, 625, 75"
                AbsoluteLayout.LayoutFlags="PositionProportional">
                <Entry.Shadow>
                    <Shadow Brush="Black"
                            Offset="3,3"
                            Radius="8"
                            Opacity="0.3" />
                </Entry.Shadow>
            </Entry>
        </AbsoluteLayout>
            
        <AbsoluteLayout
            Margin="0,10,0,10"
            HeightRequest="75">

            <Label
                Text="Last Name"
                FontFamily="KohSantepheapRegular"
                FontSize="20"
                TextColor="#4b8e8b"
                VerticalOptions="Center"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, AutoSize, AutoSize"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                TranslationX="-400"/>

            <Entry
                x:Name="LastNameEntry"
                Placeholder=""
                TextColor="White"
                BackgroundColor="#4b8e8b"
                VerticalOptions="Center"
                WidthRequest="625"
                HeightRequest="55"
                TextChanged="LastNameEntry_OnTextChanged"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, 625, 75"
                AbsoluteLayout.LayoutFlags="PositionProportional">
                <Entry.Shadow>
                    <Shadow Brush="Black"
                            Offset="3,3"
                            Radius="8"
                            Opacity="0.3" />
                </Entry.Shadow>
            </Entry>

        </AbsoluteLayout>
        
        <AbsoluteLayout
            Margin="0,10,0,10"
            HeightRequest="75">

            <Label
                Text="Zipcode"
                FontFamily="KohSantepheapRegular"
                FontSize="20"
                TextColor="#4b8e8b"
                VerticalOptions="Center"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, AutoSize, AutoSize"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                TranslationX="-400"/>

            <Entry
                Placeholder=""
                x:Name="ZipcodeEntry"
                TextColor="White"
                BackgroundColor="#4b8e8b"
                VerticalOptions="Center"
                WidthRequest="625"
                HeightRequest="55"
                TextChanged="ZipcodeEntry_OnTextChanged"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, 625, 75"
                AbsoluteLayout.LayoutFlags="PositionProportional">
                <Entry.Shadow>
                    <Shadow Brush="Black"
                            Offset="3,3"
                            Radius="8"
                            Opacity="0.3" />
                </Entry.Shadow>
            </Entry>

        </AbsoluteLayout>
        
        <AbsoluteLayout
            Margin="0,10,0,10"
            HeightRequest="75">

            <Label
                Text="Birthday"
                FontFamily="KohSantepheapRegular"
                FontSize="20"
                TextColor="#4b8e8b"
                VerticalOptions="Center"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, AutoSize, AutoSize"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                TranslationX="-400"/>

            <Entry
                Placeholder=""
                x:Name="BirthdayEntry"
                TextColor="White"
                BackgroundColor="#4b8e8b"
                VerticalOptions="Center"
                WidthRequest="625"
                HeightRequest="55"
                TextChanged="BirthdayEntry_OnTextChanged"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, 625, 75"
                AbsoluteLayout.LayoutFlags="PositionProportional">
                <Entry.Shadow>
                    <Shadow Brush="Black"
                            Offset="3,3"
                            Radius="8"
                            Opacity="0.3" />
                </Entry.Shadow>
            </Entry>

        </AbsoluteLayout>
        <!--- I think it makes more sense for the sport to be a picker instead of an entry, but I'm not the one in charge of design so -->
        <AbsoluteLayout
            Margin="0,10,0,10"
            HeightRequest="75">

            <Label
                Text="Sport"
                FontFamily="KohSantepheapRegular"
                FontSize="20"
                TextColor="#4b8e8b"
                VerticalOptions="Center"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, AutoSize, AutoSize"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                TranslationX="-400"/>

            <Entry
                Placeholder=""
                x:Name="SportEntry"
                TextColor="White"
                BackgroundColor="#4b8e8b"
                VerticalOptions="Center"
                WidthRequest="625"
                HeightRequest="55"
                TextChanged="SportEntry_TextChanged"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, 625, 75"
                AbsoluteLayout.LayoutFlags="PositionProportional">
                <Entry.Shadow>
                    <Shadow Brush="Black"
                            Offset="3,3"
                            Radius="8"
                            Opacity="0.3" />
                </Entry.Shadow>
            </Entry>

        </AbsoluteLayout>
        
        <AbsoluteLayout
            Margin="0,10,0,10"
            HeightRequest="75">

            <Label
                Text="Position"
                FontFamily="KohSantepheapRegular"
                FontSize="20"
                TextColor="#4b8e8b"
                VerticalOptions="Center"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, AutoSize, AutoSize"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                TranslationX="-400"/>

            <Picker
                x:Name = "PositionPicker"
                TextColor="White"
                BackgroundColor="#4b8e8b"
                VerticalOptions="Center"
                WidthRequest="625"
                HeightRequest="55"
                SelectedIndexChanged="PositionPicker_OnSelectedIndexChanged"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, 625, 75"
                AbsoluteLayout.LayoutFlags="PositionProportional">
                <Picker.Shadow>
                    <Shadow Brush="Black"
                            Offset="3,3"
                            Radius="8"
                            Opacity="0.3" />
                </Picker.Shadow>
            </Picker>
            
            

        </AbsoluteLayout>
        
        <AbsoluteLayout
            Margin="0,10,0,10"
            HeightRequest="75">

            <Label
                Text="Email"
                FontFamily="KohSantepheapRegular"
                FontSize="20"
                TextColor="#4b8e8b"
                VerticalOptions="Center"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, AutoSize, AutoSize"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                TranslationX="-400"/>

            <Entry
                Placeholder=""
                x:Name="EmailEntry"
                TextColor="White"
                BackgroundColor="#4b8e8b"
                VerticalOptions="Center"
                WidthRequest="625"
                HeightRequest="55"
                TextChanged="EmailEntry_OnTextChanged"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, 625, 75"
                AbsoluteLayout.LayoutFlags="PositionProportional">
                <Entry.Shadow>
                    <Shadow Brush="Black"
                            Offset="3,3"
                            Radius="8"
                            Opacity="0.3" />
                </Entry.Shadow>
            </Entry>

        </AbsoluteLayout>
        
        
    </VerticalStackLayout>
</ContentPage>