<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_frontend.Pages.AthleteUnder13SignupPage.AthleteUnder13SignupPage">
    <VerticalStackLayout
        Spacing="0"
        Padding="10"
        VerticalOptions="Center"
        HorizontalOptions="Center">

        <Label
            Text="Athlete"
            FontSize="64"
            FontFamily = "KohSantepheapRegular"
            TextColor="#4b8e8b"
            HorizontalOptions="Center"
            Margin="0,0,0,-10" />

        <Label
            Text="Sign Up"
            FontSize="48"
            FontFamily = "KohSantepheapRegular"
            TextColor="#4b8e8b"
            HorizontalOptions="Center"
            Margin="0,0,0,10" />

        <Label
            Text = "If under 13"
            FontFamily = "KohSantepheapRegular"
            FontSize="26"
            TextColor="White"
            BackgroundColor="#4b8e8b"
            HorizontalOptions="Center"
            Margin = "0, 0, 0, 40" />

        <VerticalStackLayout
            Margin="0,10,0,10"
            Spacing="5">
            <Label
                Text="First/Last Name"
                FontFamily="KohSantepheapRegular"
                FontSize="20"
                TextColor="#4b8e8b"
                HorizontalOptions="Start"/>
            <Entry
                x:Name="FullNameEntry"
                Placeholder=""
                TextColor="White"
                BackgroundColor="#4b8e8b"
                WidthRequest="625"
                HeightRequest="55"
                TextChanged="FullNameEntry_OnTextChanged">
                <Entry.Shadow>
                    <Shadow Brush="Black"
                            Offset="3,3"
                            Radius="8"
                            Opacity="0.3" />
                </Entry.Shadow>
            </Entry>
        </VerticalStackLayout>

        <VerticalStackLayout
            Margin="0,10,0,10"
            Spacing="5">
            <Label
                Text="Parent Phone Number"
                FontFamily="KohSantepheapRegular"
                FontSize="20"
                TextColor="#4b8e8b"
                HorizontalOptions="Start"/>
            <Entry
                x:Name="ParentPhoneNumberEntry"
                Placeholder=""
                TextColor="White"
                BackgroundColor="#4b8e8b"
                WidthRequest="625"
                HeightRequest="55"
                TextChanged="ParentPhoneNumberEntry_OnTextChanged">
                <Entry.Shadow>
                    <Shadow Brush="Black"
                            Offset="3,3"
                            Radius="8"
                            Opacity="0.3" />
                </Entry.Shadow>
            </Entry>
        </VerticalStackLayout>

        <VerticalStackLayout
            Margin="0,10,0,10"
            Spacing="5">
            <Label
                Text="Parent Email"
                FontFamily="KohSantepheapRegular"
                FontSize="20"
                TextColor="#4b8e8b"
                HorizontalOptions="Start"/>
            <Entry
                x:Name="ParentEmailEntry"
                Placeholder=""
                TextColor="White"
                BackgroundColor="#4b8e8b"
                WidthRequest="625"
                HeightRequest="55"
                TextChanged="ParentEmailEntry_OnTextChanged">
                <Entry.Shadow>
                    <Shadow Brush="Black"
                            Offset="3,3"
                            Radius="8"
                            Opacity="0.3" />
                </Entry.Shadow>
            </Entry>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>
