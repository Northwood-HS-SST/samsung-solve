<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_frontend.Pages.SignInPage.SignInPage">
    <VerticalStackLayout
        Spacing="0"
        Padding="10"
        VerticalOptions="Center"
        HorizontalOptions="Center">

        <Label
            Text="HerPlay"
            FontSize="64"
            FontFamily="KohSantepheapRegular"
            TextColor="#4b8e8b"
            HorizontalOptions="Center"/>

        <Label
            Text="Sign In"
            FontSize="48"
            FontFamily="KohSantepheapRegular"
            TextColor="#4b8e8b"
            HorizontalOptions="Center"
            Margin="0,0,0,40" />

        <Label
            Text="Email"
            FontSize="20"
            FontFamily="KohSantepheapRegular"
            TextColor="#4b8e8b"
            HorizontalOptions="Center"
            Margin="0,0,0,10" />

        <Border
            BackgroundColor="#4b8e8b"
            StrokeThickness="0"
            Padding="10"
            Margin="0,0,0,20"
            VerticalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>

            <Entry
                x:Name="EmailEntry"
                Placeholder="Email"
                PlaceholderColor="White"
                TextColor="White"
                BackgroundColor="Transparent"
                TextChanged="EmailEntry_OnTextChanged"
                Keyboard="Email" />
        </Border>

        <Label
            Text="Password"
            FontSize="20"
            FontFamily="KohSantepheapRegular"
            TextColor="#4b8e8b"
            HorizontalOptions="Center"
            Margin="0,0,0,10" />

        <Border
            BackgroundColor="#4b8e8b"
            StrokeThickness="0"
            Padding="10,10"
            Margin="0,0,0,20"
            VerticalOptions="Center">
            
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10"/>
            </Border.StrokeShape>

            <Entry
                x:Name="PasswordEntry"
                IsPassword="True"
                Placeholder="Password"
                PlaceholderColor="White"
                TextColor="White"
                BackgroundColor="Transparent"
                TextChanged="PasswordEntry_OnTextChanged"
                Keyboard="Email" />
        </Border>

        <Button
            Text="Sign In"
            Clicked="SignInButton_OnClicked"
            FontFamily="KohSantepheapRegular"
            BackgroundColor="#4b8e8b"
            TextColor="White"
            FontSize="32"
            CornerRadius="10"
            HorizontalOptions="Center" />

        <Button
            Text="Forgot Password?"
            Clicked="ForgotPasswordButton_OnClicked"
            FontFamily="KohSantepheapRegular"
            BackgroundColor="Transparent"
            TextColor="#6EA6A3"
            FontSize="18"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
