<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_frontend.Pages.AthleteSignupPage.AthleteSignupPage">
    <VerticalStackLayout
        Spacing="10"
        Padding="20"
        VerticalOptions="Start">

        <Label
            Text="Athlete"
            FontSize="64"
            FontFamily = "KohSantepheapRegular"
            TextColor="#4b8e8b"
            HorizontalOptions="Center"/>
        
        <Label
            Text="Sign Up"
            FontSize="24"
            FontFamily = "KohSantepheapRegular"
            TextColor="#4b8e8b"
            HorizontalOptions="Center"
            Margin="0,0,0,20" />

        <Border
            BackgroundColor="#4b8e8b"
            StrokeThickness="0"
            Padding="10,0"
            VerticalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>

            <Entry
                x:Name="EmailEntry"
                Placeholder="Email"
                PlaceholderColor="White"
                TextColor="White"
                BackgroundColor="Transparent"
                TextChanged="FirstNameEntry_OnTextChanged"
                Keyboard="Email"
                >
            </Entry>
        </Border>

        <Border
            BackgroundColor="#4b8e8b"
            StrokeThickness="0"
            Padding="10,0"
            VerticalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>

            <Entry
                x:Name="PasswordEntry"
                Placeholder="Password"
                PlaceholderColor="White"
                TextColor="White"
                BackgroundColor="Transparent"
                TextChanged="PasswordEntry_OnTextChanged"
                IsPassword="True"
            >
            </Entry>
        </Border>

        <Border
            BackgroundColor="#4b8e8b"
            StrokeThickness="0"
            Padding="10,0"
            VerticalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>

            <Entry
                x:Name="ConfirmPasswordEntry"
                Placeholder="Confirm Password"
                PlaceholderColor="White"
                TextColor="White"
                BackgroundColor="Transparent"
                TextChanged="PasswordEntry_OnTextChanged"
                IsPassword="True"
            >
            </Entry>
        </Border>


        <Button
            Text = "Under 13? Sign up here."
            FontSize="18"
            FontFamily = "KohSantepheapRegular"
            TextColor="White"
            BackgroundColor="#3F7875"
            HorizontalOptions="Center"
            Clicked="Under13Button_Clicked"
            CornerRadius="10"/>

        <Button
            x:Name="SignupButton"
            Text = "Sign Up"
            FontSize="18"
            FontFamily = "KohSantepheapRegular"
            TextColor="White"
            BackgroundColor="#3F7875"
            HorizontalOptions="Center"
            Clicked="SignupButton_OnClicked"
            CornerRadius="10"/>

</VerticalStackLayout>
</ContentPage>