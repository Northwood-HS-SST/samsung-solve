<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_frontend.Pages.LoginPage.LoginPage"
             BackgroundColor="#F8F9F9">

    <VerticalStackLayout
        Spacing="10"
        Padding="20"
        VerticalOptions="Center"
        HorizontalOptions="Center">

        <Image
            Source="logo.png"
            WidthRequest="350"
            HeightRequest="350"
            HorizontalOptions="Center" />

        <Label
            Text="HerPlay"
            FontSize="64"
            FontFamily = "KohSantepheapRegular"
            TextColor="#4b8e8b"
            HorizontalOptions="Center"
            Margin="0,10,0,5" />

        <Button
            Text="Sign Up"
            Clicked="SignUpButton_OnClicked"
            FontFamily = "KohSantepheapRegular"
            BackgroundColor="#4b8e8b"
            TextColor="White"
            FontSize="18"
            WidthRequest="250"
            HeightRequest="65"
            CornerRadius="10"
            HorizontalOptions="Center" />


        <Label
            Text="OR"
            TextColor="#4b8e8b"
            FontFamily = "KohSantepheapRegular"
            FontSize="16"
            HorizontalOptions="Center"
            Margin="0,10,0,2.5" />

        <Button
            Text="Log In"
            Clicked="LoginButton_OnClicked"
            FontFamily = "KohSantepheapRegular"
            BackgroundColor="#4b8e8b"
            TextColor="White"
            FontSize="18"
            WidthRequest="250"
            HeightRequest="65"
            CornerRadius="10"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>